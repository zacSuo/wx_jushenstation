/* pages/chat/chat.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f6f6f6;
}

.chat-container {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.messages {
  display: flex;
  flex-direction: column;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
  max-width: 80%;
}

.user-message {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.ai-message {
  align-self: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 10rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

/* 添加头像占位符样式 */
.user-avatar-placeholder {
  width: 100%;
  height: 100%;
  background-color: #1296db;
  border-radius: 50%;
}

.ai-avatar-placeholder {
  width: 100%;
  height: 100%;
  background-color: #8bc34a;
  border-radius: 50%;
}

.content {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  word-break: break-all;
}

.user-message .content {
  background-color: #1296db;
  color: #fff;
}

.loading {
  align-self: center;
  margin: 20rpx 0;
}

.loading-dots {
  display: flex;
  justify-content: center;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin: 0 10rpx;
  animation: dotFlashing 1s infinite alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dotFlashing {
  0% {
    background-color: #ccc;
  }
  100% {
    background-color: #666;
  }
}

.footer {
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.input-area {
  display: flex;
  margin-bottom: 20rpx;
}

.input-area input {
  flex: 1;
  height: 80rpx;
  background-color: #f6f6f6;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  background-color: #1296db;
  color: #fff;
  font-size: 28rpx;
  padding: 0;
  border-radius: 40rpx;
}

.voice-btn-area {
  margin-bottom: 20rpx;
}

.voice-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f6f6f6;
  color: #333;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.voice-btn.recording {
  background-color: #e6e6e6;
}

.clear-btn-area {
  display: flex;
  justify-content: center;
}

.clear-btn {
  font-size: 24rpx;
  color: #999;
  background: none;
  border: none;
  line-height: 1.5;
  padding: 0;
}

.clear-btn::after {
  border: none;
}
