.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
}

.header {
  width: 100%;
  margin-bottom: 30rpx;
}

.tabs {
  display: flex;
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab.active {
  color: #1aad19;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: #1aad19;
  border-radius: 3rpx;
}

.products-list {
  width: 100%;
}

.product-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.product-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-authors {
  font-size: 24rpx;
  color: #999;
}

.product-date {
  font-size: 24rpx;
  color: #999;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 22rpx;
  color: #1aad19;
  background-color: rgba(26, 173, 25, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.product-actions {
  display: flex;
  justify-content: flex-end;
}

button {
  background-color: #1aad19;
  color: white;
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.empty-state {
  width: 100%;
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}