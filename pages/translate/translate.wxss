/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
}

/* 翻译容器样式 */
.translate-container {
  flex: 1;
  overflow-y: auto;
  padding: 10px;
  padding-bottom: 230px; /* 为底部按钮留出足够空间 */
}

/* 消息样式 */
.messages {
  display: flex;
  flex-direction: column;
}

.message {
  display: flex;
  margin-bottom: 10px;
}

.user-message {
  justify-content: flex-end;
}

.ai-message {
  justify-content: flex-start;
}

.avatar {
  width: 30px;
  height: 30px;
  margin: 0 10px;
}

.user-avatar-placeholder,
.ai-avatar-placeholder {
  width: 100%;
  height: 100%;
  background-color: #ccc;
  border-radius: 50%;
}

.content {
  padding: 10px;
  border-radius: 5px;
  max-width: 70%;
  word-break: break-all;
}

.user-message .content {
  background-color: #007aff;
  color: white;
}

.ai-message .content {
  background-color: #eee;
}

/* 确保最后一条消息不被底部按钮遮挡 */
.message-bottom-space {
  height: 20px;
  width: 100%;
}

/* 加载中样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
}

.loading-dots {
  display: flex;
}

.dot {
  width: 10px;
  height: 10px;
  background-color: #007aff;
  border-radius: 50%;
  margin: 0 5px;
  animation: dot-bounce 1s infinite ease-in-out;
}

.dot:nth-child(2) {
  animation-delay: 0.1s;
}

.dot:nth-child(3) {
  animation-delay: 0.2s;
}

.realtime-text {
  margin-top: 10px;
  padding: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
  max-width: 80%;
}

@keyframes dot-bounce {
  0%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10px);
  }
}

/* 底部样式 */
.footer {
  display: flex;
  flex-direction: column;
  padding: 10px;
  border-top: 1px solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 100;
}

/* 语音按钮行 */
.voice-row {
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}

.voice-btn {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #007aff;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  padding: 0;
  line-height: 1.2;
}

.voice-btn.recording {
  background-color: #ff3b30;
}

/* 历史记录按钮 */
.history-row {
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}

.history-btn {
  padding: 8px 15px;
  background-color: #f0f0f0;
  border-radius: 5px;
  font-size: 14px;
  color: #333;
  text-align: center;
}

/* 历史记录列表 */
.history-list {
  max-height: 300px;
  overflow-y: auto;
  border-top: 1px solid #eee;
  padding-top: 10px;
}

.empty-history {
  text-align: center;
  padding: 10px;
  color: #999;
  font-size: 14px;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.history-content {
  flex: 1;
  overflow: hidden;
}

.history-source, .history-translated {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.history-text {
  flex: 1;
  font-size: 14px;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.history-lang {
  font-size: 12px;
  color: #999;
  margin-left: 5px;
  white-space: nowrap;
}

.delete-btn {
  width: 20px;
  height: 20px;
  line-height: 18px;
  text-align: center;
  font-size: 16px;
  color: #999;
  margin-left: 10px;
}

.clear-btn {
  padding: 10px;
  border: none;
  border-radius: 5px;
  background-color: #eee;
  margin: 10px 0;
  text-align: center;
  font-size: 14px;
  color: #666;
}
